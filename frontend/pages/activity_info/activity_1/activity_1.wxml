<view class="cover">
  <image class="bg" src='../../../images/lecture1.jpg'></image>
  <image class="image-1" src='../../../images/lecture1.jpg' mode='scaleToFill'></image>
  <view class="style-3">
    {{title}}
  </view>
  <view class="style-6">
  承办部门：{{holdusr}}
  </view>
  <view class="style-7">
  发布用户：{{postusr}}
  </view>
  <view class="style-8">
  报名人数：{{now}}/{{max}}
  </view>
</view>
<view class="time">
  <view class="style-2">
    {{date}} {{time}}</view>
  <view class="style-1">
    {{place}}</view>
</view>
<view class="intro">
  <view class="style-4">
    详情
  </view>
  <view class="style-5">
    {{intro}}

  </view>
  <view class="style-5">
    {{intro2}}
  </view>
</view>
<view class="round-click" bindtap="signup">
报名
</view>
